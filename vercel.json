{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.0"
    },
    "api/checkout/index.php": {
      "runtime": "vercel-php@0.6.0"
    },
    "api/webhook/index.php": {
      "runtime": "vercel-php@0.6.0"
    },
    "api/fb-conversions-api/index.php": {
      "runtime": "vercel-php@0.6.0"
    },
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    },
    "api/checkout/index": {
      "runtime": "nodejs20.x"
    },
    "api/fb-conversions-api/index": {
      "runtime": "nodejs20.x"
    },
    "api/index": {
      "runtime": "nodejs20.x"
    },
    "api/webhook/index": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/checkout/pagamento.php", "destination": "/api/checkout/index.php" },
    { "source": "/checkout/verificar.php", "destination": "/api/checkout/index.php" },
    { "source": "/fb-conversions-api.php", "destination": "/api/fb-conversions-api/index.php" },
    { "source": "/webhook.php", "destination": "/api/webhook/index.php" },
    { "source": "/api/checkout/(.*)", "destination": "/api/checkout/index.php" },
    { "source": "/api/fb-conversions-api/(.*)", "destination": "/api/fb-conversions-api/index.php" },
    { "source": "/api/webhook/(.*)", "destination": "/api/webhook/index.php" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Accept, Authorization" }
      ]
    }
  ],
  "env": {
    "PHP_MEMORY_LIMIT": "512M",
    "PHP_DISPLAY_ERRORS": "1",
    "PHP_ALLOW_POST": "1",
    "PHP_INI_ALLOW_URL_INCLUDE": "1",
    "VERCEL_PHP_RUNTIME": "vercel-php@0.6.0"
  },
  "build": {
    "env": {
      "PHP_VERSION": "7.4"
    }
  }
} 