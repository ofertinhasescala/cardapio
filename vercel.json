{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "rewrites": [
    { "source": "/checkout/(.*)\\.php", "destination": "/api/checkout/$1.php" },
    { "source": "/api/checkout/(.*)\\.php", "destination": "/api/checkout/$1.php" },
    { "source": "/api/(.*)\\.php", "destination": "/api/$1.php" },
    { "source": "/(.*)\\.php", "destination": "/api/$1.php" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Accept, Authorization" }
      ]
    }
  ],
  "env": {
    "PHP_MEMORY_LIMIT": "512M",
    "PHP_DISPLAY_ERRORS": "1",
    "PHP_ALLOW_POST": "1",
    "PHP_INI_ALLOW_URL_INCLUDE": "1",
    "VERCEL_PHP_RUNTIME": "vercel-php@0.6.0"
  },
  "build": {
    "env": {
      "PHP_VERSION": "7.4"
    }
  }
} 